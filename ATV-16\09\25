//POTENCIAÇAO
// sente a potencia BB KKKKKK
#include <stdio.h>

int main() {
    int numero;
    int resultado;

     printf("digite um numero inteiro: ");
    scanf("%d",&numero);

    printf("O numero %d elevado a 2 e %d.\n", numero, resultado, resultado = numero * numero);
    return 0;
}



